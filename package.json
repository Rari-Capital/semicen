{
  "name": "semicen",
  "version": "1.0.0",
  "description": "Consensus and reward contracts for Rari's 'semicen' rebalancer system.",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage && npm run open-coverage-report",
    "open-coverage-report": "if [ $(uname) = 'Darwin' ]; then open ./coverage/index.html; fi",
    "deploy-kovan": "hardhat run --network kovan scripts/deploy.ts",
    "deploy-ropsten": "hardhat run --network ropsten scripts/deploy.ts",
    "deploy-mainnet": "hardhat run --network mainnet scripts/deploy.ts"
  },
  "author": "t11s",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/truffle-v5": "^4.0.0",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "hardhat": "^2.0.7",
    "hardhat-preprocessor": "^0.1.1",
    "hardhat-typechain": "^0.3.4",
    "solidity-coverage": "^0.7.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3",
    "web3": "^1.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0"
  }
}
